  Plug 'haya14busa/incsearch-fuzzy.vim'
  Plug 'haya14busa/incsearch-migemo.vim', { 'do': 'brew install cmigemo' }
  Plug 'haya14busa/incsearch-easymotion.vim'
  Plug 'tpope/vim-rails'
  Plug 'posva/vim-vue'

  " indent guides
  Plug 'nathanaelkane/vim-indent-guides'

  " ctags
